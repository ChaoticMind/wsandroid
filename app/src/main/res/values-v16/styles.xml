<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_primary_raised" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorControlHighlight">@color/primaryColorAccent</item>
        <item name="colorAccent">@color/primaryButtonDisable</item>
        <item name="colorButtonNormal">@color/primaryColor</item>
    </style>

    <style name="button_primary_flat" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="button_accent_flat" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
    </style>

    <style name="button_light_flat" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/primaryTextColorLight</item>
    </style>

    <style name="WsPictureOverlayTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="WsPictureOverlayTitle.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>