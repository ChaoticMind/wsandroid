<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:padding="2dp"
             android:layout_width="@dimen/single_host_marker_size"
             android:layout_height="@dimen/single_host_marker_size"
    android:foregroundGravity="center_horizontal">

    <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/single_host_marker_size"
            android:layout_height="@dimen/single_host_marker_size"
        android:src="@drawable/map_markers_multiple" />

    <TextView
            android:id="@id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SingleLocationClusterIcon.TextAppearance"
            android:text="8"
            android:alpha=".8"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp" />

</FrameLayout>