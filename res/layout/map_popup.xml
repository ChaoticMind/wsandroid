<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDFFFFFF"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/lblMapPopupLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#FF000000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblMapPopupDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="#FF000000"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
        android:paddingBottom="12dp" >
        
    <TextView
        android:id="@+id/lblMapPopupViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="View details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF2222CC" />

    <TextView
        android:id="@+id/lblSpacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" | "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF000000" />
    
    <TextView
        android:id="@+id/lblMapPopupContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Contact"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF2222CC" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/lblMapPopupClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="dismissHostPopup"
        android:text="Close"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF2222CC" />

</LinearLayout>